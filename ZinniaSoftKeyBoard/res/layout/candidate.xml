<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="Input" android:id="@+id/textViewInput" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="wrap_content" android:id="@+id/editTextInput" android:layout_height="wrap_content" android:layout_weight="0.7">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:text="Commit" android:id="@+id/buttonCommit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Clear" android:id="@+id/buttonClear" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
